{
  "name": "zk-beacon",
  "version": "0.3.1",
  "description": "A simple ZooKeeper announce library",
  "keywords": [
    "zookeeper",
    "announce"
  ],
  "author": {
    "name": "Metamarkets",
    "url": "http://metamarkets.com/"
  },
  "contributors": [
    {
      "name": "Vadim Ogievetsky",
      "email": "vadim@metamarkets.com"
    },
    {
      "name": "Young Min Kim",
      "email": "young@metamarkets.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/metamx/zk-beacon.git"
  },
  "main": "build/beacon.js",
  "scripts": {
    "tsd": "./node_modules/.bin/tsd reinstall",
    "tslint": "./node_modules/.bin/tslint src/*.ts",
    "build": "./node_modules/.bin/tsc src/*.ts typings/*/*.d.ts typings_custom/*.d.ts --outDir build/ --m commonjs -d -sourceMap --mapRoot src/ --rootDir src/ --target ES5",
    "bundle": "./node_modules/.bin/dts-bundle --name zk-beacon --main build/beacon.d.ts",
    "prepublish": "npm run tsd && npm run tslint && npm run build && npm run bundle && npm run test",
    "test": "./node_modules/.bin/mocha"
  },
  "typescript": {
    "definition": "build/zk-beacon.d.ts"
  },
  "dependencies": {
    "node-zookeeper-client": "~0.2.2",
    "node-uuid": "~1.4.3"
  },
  "devDependencies": {
    "async": "0.9.0",
    "chai": "~1.10.0",
    "coffee-script": "~1.9.0",
    "dts-bundle": "~0.3.0",
    "dts-bundle-cmd": "~1.0.0",
    "mocha": "~2.1.0",
    "tsd": "^0.6.5",
    "tslint": "^2.5.1",
    "typescript": "^1.6.2"
  }
}
